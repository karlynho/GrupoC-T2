<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="DiarioSur-T2PU" transaction-type="JTA">
    <jta-data-source>jdbc/sample</jta-data-source>
    <class>com.uma.diariosur.modelo.Anuncio</class>
    <class>com.uma.diariosur.modelo.Evento</class>
    <class>com.uma.diariosur.modelo.Formulario</class>
    <class>com.uma.diariosur.modelo.Imagen</class>
    <class>com.uma.diariosur.modelo.Megusta</class>
    <class>com.uma.diariosur.modelo.Periodista</class>
    <class>com.uma.diariosur.modelo.Usuario</class>
    <class>com.uma.diariosur.modelo.Valoracion</class>
    <class>com.uma.diariosur.modelo.Video</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
